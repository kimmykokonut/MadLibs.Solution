        <input id="one" name="one" type="text">
        <br />
        <label for="two">Noun</label>
        <input id="two" name="two" type="text">
        <br />
        <label for="three">Verb (past tense)</label>
        <input id="three" name="three" type="text">
        <br />
        <label for="four">Adverb</label>
        <input id="four" name="four" type="text">
        <br />
        <label for="five">Place</label>
        <input id="five" name="five" type="text">
        <br />
        <label for="six">Adjective</label>
        <input id="six" name="six" type="text">
        <br />
        <label for="seven">Plural Noun</label>
        <input id="seven" name="seven" type="text">
        <br />
        <label for="eight">Verb</label>
        <input id="eight" name="eight" type="text">
        <br />
        <label for="nine">Adjective</label>
        <input id="nine" name="nine" type="text">
        <br />
        <label for="ten">Noun (body part)</label>
        <input id="ten" name="ten" type="text">
        <br />
        <label for="eleven">Adjective</label>
        <input id="eleven" name="eleven" type="text">
        <br />
        <label for="twelve">Verb (present tense)</label>
        <input id="twelve" name="twelve" type="text">
        <br />
        <label for="thirteen">Plural Noun</label>
        <input id="thirteen" name="thirteen" type="text">
        <br />
        <label for="fourteen">Verb (ending in -ing)</label>
        <input id="fourteen" name="fourteen" type="text">
        <br />
        <label for="fifteen">Adjective (Plural)</label>
        <input id="fifteen" name="fifteen" type="text">
        <br />
        <button type="submit">Create story!</button>
    </form>
</body>

</html>